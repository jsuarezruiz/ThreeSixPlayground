<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ThreeSixPlayground.Views.Visual.SliderView"
    Title="Slider"
    Visual="Material">
    <ContentPage.Content>
        <StackLayout
            Padding="12">
            <Label 
                Text="Default"/>   
            <Slider 
                Minimum="0" 
                Maximum="100" />   
            <Label 
                Text="Custom"/>   
            <Slider 
                MinimumTrackColor="Red"
                MaximumTrackColor="Lime"
                ThumbColor="Orange"
                Minimum="-100" 
                Maximum="100" />  
            <Label 
                Text="Custom (Disabled)"/>   
            <Slider 
                MinimumTrackColor="Red"
                MaximumTrackColor="Lime"
                ThumbColor="Orange"
                Minimum="-100" 
                Maximum="100" 
                Value="50"
                IsEnabled="False"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
